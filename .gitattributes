# Automatically normalize line endings
* text=auto

# Force LF (Unix style) endings for source code files
*.js     text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.jsx    text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.html   text eol=lf
*.json   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.mjs    text eol=lf

# Treat binary files correctly
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.pdf    binary
*.woff   binary
*.woff2  binary
*.ttf    binary
*.eot    binary
*.svg    text

# Git configuration files
.gitattributes text eol=lf
.gitignore     text eol=lf
